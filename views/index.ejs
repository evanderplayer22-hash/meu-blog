<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Meu Blog</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">
        <i class="fas fa-blog me-2"></i>Meu Blog
      </a>
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/">Home</a>
        <a class="nav-link" href="/about">Sobre</a>
      </div>
    </div>
  </nav>

  <!-- Posts -->
  <div class="container my-5">
    <div class="row g-4">
      <% posts.forEach(post => { %>
        <div class="col-lg-4 col-md-6">
          <div class="card h-100 shadow-sm hover-card">
            <% if(post.image) { %>
              <img src="<%= post.image %>" class="card-img-top" alt="<%= post.title %>">
            <% } %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text flex-grow-1"><%= post.content.substring(0, 120) %>...</p>
              <div class="text-muted small mb-3">
                <i class="fas fa-calendar"></i> <%= post.date %> 
                <i class="fas fa-user ms-2"></i> <%= post.author %>
              </div>
              <a href="/post/<%= post.id %>" class="btn btn-primary mt-auto">
                <i class="fas fa-arrow-right me-1"></i>Ler mais
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-white py-4 mt-5">
    <div class="container text-center">
      <p>© 2026 Meu Blog. Feito com ❤️ no Railway.</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
